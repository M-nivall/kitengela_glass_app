<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:orientation="vertical"
    tools:context="com.example.Varsani.Clients.home.HomeFragment">

    <!-- Scrollable Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp"
                android:elevation="6dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/kitengela_header_bg"
                android:clipToPadding="false">

                <!-- Logo -->
                <ImageView
                    android:id="@+id/logoImage"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/kitengela_logo"
                    android:contentDescription="Kitengela Glass Logo"
                    android:layout_gravity="center"
                    android:scaleType="centerInside"
                    android:background="@drawable/logo_circle_bg"
                    android:padding="8dp" />

                <!-- Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kitengela Glass"
                    android:textSize="22sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp"
                    android:letterSpacing="0.05"
                    android:shadowColor="#66000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2" />

                <!-- Subtitle -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Handmade Glass Art: Jewelry, Sculptures &amp; DÃ©cor"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="4dp"
                    android:letterSpacing="0.02"
                    android:gravity="center"
                    android:shadowColor="#55000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="1" />

            </LinearLayout>


            <!-- Products Section -->
            <TextView
                android:id="@+id/txtProducts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Products"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#3E2723"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <!-- Services Section -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:paddingBottom="8dp"
                tools:listitem="@layout/item_product_card" />

            <TextView
                android:id="@+id/txtServices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Services"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#3E2723"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="8dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:paddingBottom="8dp"
                tools:listitem="@layout/item_service_card" />

            <!-- Progress Bar -->
            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_marginTop="12dp" />

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/imghome"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:padding="4dp"
            android:src="@drawable/home"
            android:contentDescription="Home"
            android:layout_marginHorizontal="24dp" />

        <ImageView
            android:id="@+id/imgcart"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:padding="4dp"
            android:src="@drawable/cart"
            android:contentDescription="Cart"
            android:layout_marginHorizontal="24dp" />

        <ImageView
            android:id="@+id/imghelp"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:padding="4dp"
            android:src="@drawable/help"
            android:contentDescription="Help"
            android:layout_marginHorizontal="24dp" />
    </LinearLayout>

</LinearLayout>
