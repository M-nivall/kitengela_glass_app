<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Suppliers.Accept">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Heading -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Items to Supply"
                android:textSize="24sp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="20dp"/>

            <!-- CardView: Items Info -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="12dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Items"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/colorBlack"
                        android:layout_marginBottom="12dp"/>

                    <TextView
                        android:id="@+id/txv_requestID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Request ID"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        android:layout_marginBottom="6dp"/>

                    <TextView
                        android:id="@+id/txv_items"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Item"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        android:layout_marginBottom="6dp"/>

                    <TextView
                        android:id="@+id/request_quantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Quantity"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        android:layout_marginBottom="6dp"/>

                    <TextView
                        android:id="@+id/txv_requestDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Date"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        android:layout_marginBottom="6dp"/>

                    <TextView
                        android:id="@+id/txv_requestStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Status"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- CardView: Payment Info + Confirm Button (initially hidden) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_payment_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="12dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Payment Info"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/colorBlack"
                        android:layout_marginBottom="12dp"/>

                    <TextView
                        android:id="@+id/unitprice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Price/m²"
                        android:textSize="16sp"
                        android:textColor="@color/colorBlack"
                        android:layout_marginBottom="6dp"/>

                    <TextView
                        android:id="@+id/edt_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total"
                        android:textSize="16sp"
                        android:textColor="@color/colorBlack"
                        android:layout_marginBottom="12dp"/>

                    <Button
                        android:id="@+id/btn_submit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Confirm Supply &amp; Send Invoice"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:padding="12dp"
                        android:background="@drawable/btn_rounded"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- CardView: Supplier Bid (Enter Unit Price) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_bid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="12dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Enter Unit Price"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorBlack"
                        android:layout_marginBottom="12dp"/>

                    <EditText
                        android:id="@+id/edt_unit_price_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter price per m²"
                        android:inputType="numberDecimal"
                        android:padding="10dp"
                        android:background="@drawable/edittext_bg"
                        android:layout_marginBottom="12dp"/>

                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="?android:attr/progressBarStyleSmall"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:visibility="gone"
                        app:layout_constraintTop_toBottomOf="@id/btn_submit"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="15dp" />

                    <Button
                        android:id="@+id/btn_bid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Submit Price"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:padding="12dp"
                        android:background="@drawable/btn_rounded"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
